<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="arjen" class="org.springframework.beans.testfixture.beans.ArjenTest">
		<property name="name" value="Arjen"/>
		<property name="age" value="24"/>
	</bean>

	<bean id="fatherBean" abstract="true" class="org.springframework.beans.testfixture.beans.ArjenTest">
		<property name="name" value="Arjen"/>
		<property name="age" value="24"/>
	</bean>

	<bean id="sonBean" parent="fatherBean">
		<property name="name" value="ArjenSon"/>
		<property name="age" value="12"/>
	</bean>

</beans>
