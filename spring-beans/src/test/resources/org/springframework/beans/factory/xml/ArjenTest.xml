<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="arjen" class="org.springframework.beans.testfixture.beans.ArjenTest">
		<property name="name" value="Arjen"/>
		<property name="age" value="24"/>
	</bean>

	<bean id="arjenCat" class="org.springframework.beans.testfixture.beans.ArjenCat">
		<property name="catName" value="No"/>
		<property name="catColor" value="yellow"/>
	</bean>

	<bean id="fatherBean" abstract="true"
		  class="org.springframework.beans.testfixture.beans.ArjenTest">
		<property name="name" value="Arjen"/>
		<property name="age" value="24"/>
	</bean>

	<!-- autowire="byType" 是通过set方法注入-->
	<!-- autowire="constructor" 是通过构造方法注入-->
	<bean id="sonBean" parent="fatherBean" autowire="constructor">
		<property name="name" value="ArjenSon"/>
		<property name="age" value="12"/>
		<!--依赖注入 建议以后使用autowire可以避免依赖注入的硬编码-->
		<!--<property name="cat" ref="arjenCat"/>-->
	</bean>

</beans>
